
@{
    ViewBag.Title = "\"" + ViewBag.SearchQuery + "\"";
}
@using RudycommerceData.Models.ASPModels;

@Html.Raw("<div class=\"container\">")
<h2 class="product-list-title">@String.Format(Resources.Global.YourSearchQuery, ViewBag.SearchQuery)</h2>
<hr />


@if (((List<ProductListItem>)ViewBag.Products).Count() == 0)
{

    <div>@Resources.Global.NoProductsFoundSearch</div>
    @Html.Raw("</div>")
}
else
{
    @Html.Raw("</div>")
    @Html.Partial("_FilterableProductList")
}

@section Styles {
    @Styles.Render("~/Content/Pages/ProductList.css")
    @Styles.Render("~/Content/Pages/AddToCartButton.css")
}

