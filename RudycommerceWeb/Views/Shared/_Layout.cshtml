 <!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Rudycommerce</title>

    <link type="text/css" rel="stylesheet" href="~/Content/css" />

    <link href="~/Content/Pages/Layout.css" rel="stylesheet" type="text/css" />
    <link type="text/css" rel="stylesheet" href="~/Content/Pages/ShoppingCart.css" />


    @RenderSection("Styles", false)
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    
</head>
<body>

    <header class="sticky-top">
        @Html.Partial("_Header")
    </header>

    <content>
        @if (ViewBag.IsHome != null)
        {
            <div class="jumbotron jumbotron-fluid jumbo">
                <div class="container" id="jumboCollapse">
                    <h1 class="display-4 site-welcome">@Resources.Global.JumboWelcomeTo<span class="font-italic font-weight-bold">Rudycommerce</span></h1>
                    <p class="lead">@Resources.Global.Tagline</p>
                    <p>
                        <a class="btn btn-secondary collapse-button" data-toggle="collapse" href="#collapseCountries" role="button" aria-expanded="false"
                           aria-controls="collapseCountries">
                            @Resources.Global.DeliverCountries
                        </a>
                        <a class="btn btn-secondary collapse-button" data-toggle="collapse" href="#collapseDelivery" role="button" aria-expanded="false"
                           aria-controls="collapseDelivery">
                            @Resources.Global.DeliveryPrices
                        </a>
                    </p>

                    <div class="collapse" id="collapseCountries" data-parent="#jumboCollapse">
                        <div class="card card-body collapse-content">
                            <div class="container">
                                @Resources.Global.DeliverCountriesDescription
                            </div>
                        </div>
                    </div>

                    <div class="collapse" id="collapseDelivery" data-parent="#jumboCollapse">
                        <div class="card card-body collapse-content">
                            <div class="container">
                                @Html.Raw(Resources.Global.DeliveryPricesDescription.Replace(Environment.NewLine, "<br/>"))
                                <a href="@Url.Action("Index", "Products", null)">@Resources.Global.DeliveryPricesLink</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }

        <div class="container-fluid body-content">
            @RenderBody()
        </div>
    </content>

    <footer>
        <hr />

        @Html.Partial("_Footer")
    </footer>


    @Scripts.Render("~/bundles/jquery")
    @*@Scripts.Render("~/bundles/jqueryval")*@

    @Scripts.Render("~/bundles/bootstrap")

    <script src="~/Scripts/Pages/Global.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
