<Window x:Class="RudycommerceWPF.WindowsAndUserControls.MyDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RudycommerceWPF.WindowsAndUserControls"
        mc:Ignorable="d"
        Title="MyDialog" Height="170" Width="300" WindowStartupLocation="CenterScreen" Background="Beige">
    <Grid>
        <StackPanel>
            <Label x:Name="tbTitle" Style="{StaticResource TitleLabel}" FontSize="16" Margin="5" VerticalContentAlignment="Center" Content="Enter some text" />
            <TextBox x:Name="ResponseTextBox" Margin="5" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="btnCancel" Grid.Column="0" Content="Cancel" Click="CancelClick" Margin="5"></Button>
                <Button x:Name="btnSubmit" Grid.Column="1" Content="OK" Click="OKButton_Click" Margin="5" IsDefault="True"/>
                
            </Grid>
        </StackPanel>
    </Grid>
</Window>
